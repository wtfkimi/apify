{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2018",
    "module": "commonjs",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "lib": [
      "es2021",
      "es2018.asynciterable",
      "dom",
      "dom.iterable"
    ],
    "rootDir": "src/",
    "outDir": "build/"
  },
  "include": [
    "src/"
  ]
}